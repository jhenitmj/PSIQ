@using PSIQ.Models
@model Paciente
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12 text-center">
        <img src="@Url.Content("~/Images/logo_psiq.png")" />
        <h3>Cadastro Paciente</h3>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form class="form-horizontal" action="@Url.Action("Salvar", "CadastroP")">
            <div class="form-group">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Nome, "Nome", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.CPF, "CPF:", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.CPF, new { @class = "form-control" })
                </div>
                <div class="col-md-6 ">
                    @Html.LabelFor(m => m.DtNascimento, "Data de nascimento:", new { @class = "control-label" })
                    <div class='input-group date' id='datetimepicker1'>
                        @Html.TextBoxFor(m => m.DtNascimento, string.Format("{0:dd/MM/yyyy}", Model.DtNascimento), new { @id = "txtDtNascimento", @class = "form-control", @data_format = "dd/MM/yyyy", @maxlength = 10 })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar">
                            </span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6  ">
                    @Html.LabelFor(m => m.Email, "Email:", new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
                <div class="input-group">
                    @Html.TextBoxFor(m => m.Foto, new { @id = "txtFoto", @class = "form-control", @maxlength = 1000, @readonly = true })
                    <span class="input-group-btn">
                        <span class="btn btn-default fileinput-button">
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                            <input id="fupArquivo" type="file" name="files[]" multiple="multiple" data-url="@Url.Action("Upload", "CadastroPC")" />
                        </span>
                    </span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Senha, "Senha:", new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Senha, "Confirmar Senha:", new { @class = "control-label" })
                    @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
               
                <div class="col-md-12 text-right">
                    <a href="@Url.Action("Index", "LoginP")" class="btn btn-primary">Salvar</a>
                </div>
            </div>
        </form>
    </div>
</div>

