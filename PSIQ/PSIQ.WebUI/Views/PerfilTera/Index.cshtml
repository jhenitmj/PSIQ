@using PSIQ.Models
@model  Usuario
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <form class="form-horizontal">
        <div class="form-group">
            <div class="col-md-12 text-center">
                <img src="@Url.Content("~/Images/logo_psiq.png")" />
                <p><b>A rede social para o lado mais expressivo do ser</b></p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <div class="masthead">
                    <nav>
                        <ul class="nav nav-justified">
                            <li><a href="@Url.Action("Index", "PerfilTera")">Perfil</a></li>
                            <li><a href="@Url.Action("Index", "PreCadastroPaciente")"> Cadastrar Pacientes</a></li>
                            <li><a href="@Url.Action("Cadastro", "Diagnostico")"> Cadastrar Diagnósticos</a></li>
                            <li><a href="@Url.Action("LogOff", "Login")">Sair</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrWhiteSpace(Model.Foto))
                {
                    <img src="@Url.Content(string.Format("~/Fotos/{0}", Model.Foto))" class="img-circle" style="width: 200px;"/>
                }
                else
                {
                    <img class="img-circle" src="@Url.Content("~/Images/perfil-blog.png")" />
                }
                </div>
                <div class="col-md-4 text-left">
                    <label class="control-label" id="h2">@Model.Nome</label>
                    <br />
                    <label class="control-label" id="h2">@Model.CRP</label>
                </div>
                <div class="col-md-4 text-right">
                    <div class="input-group">
                        <input type="text" class="form-control" name="texto" id="texto" placeholder="Digite a pesquisa" />
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-primary">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                Filtrar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-left">
                    <div class="table-responsive">
                        <br />
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th style="width:50%">NOME</th>
                                    <th style="width:20%">DATA DE NASCIMENTO</th>
                                    <th style="width:20%">ESTADO</th>
                                    <th style="width:10%">&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Usuario paciente in Model.Pacientes)
                                {
                                    <tr style="background-color: #f9f9f9 !important;">
                                        <td style="width:45%">@paciente.Nome</td>
                                        <td style="width:20%">@string.Format("{0:dd/MM/yyyy}", paciente.DataNasc)</td>
                                        <td style="width:20%">@(paciente.Estado != null ? paciente.Estado.Nome : string.Empty)</td>
                                        <td class="text-center" style="width:15%">
                                            <a href="@Url.Action("Index", "Diagnostico", new { @pacienteId = paciente.Cod })">
                                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                            </a>
                                            <a href="@Url.Action("Chat", "PerfilTera", new { @pacienteId = paciente.Cod })">
                                                <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
                                            </a>
                                            @*<a href="@Url.Action("Index", "CadRemedio", new { @pacienteId = paciente.Cod })">
                                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                            </a>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </form>
    </div>