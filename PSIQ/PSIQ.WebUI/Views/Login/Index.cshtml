@using PSIQ.Models
@model Usuario
@{
    Layout = string.Empty;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="favicon.ico">
    <title>PSIQ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <img src="@Url.Content("~/Images/PSIQ.jpg")" />
                            <p><b>A rede social para o lado mais expressivo do ser</b></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <h1>PSIQ</h1>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="control-label">Login:</label>
                                    @Html.TextBoxFor(m => m.Login, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="control-label">Senha:</label>
                                    @Html.TextBoxFor(m => m.Senha, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <br />
                                    <label><input type="radio" name="optradio">Paciente</label>    
                                    <label><input type="radio" name="optradio">Terapeuta</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <footer class="footer text-center">
                    <p>&copy; @DateTime.Now.Year JC, Company</p>
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
