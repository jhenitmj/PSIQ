@using PSIQ.Models
@model Usuario
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>PSIQ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <form action="@Url.Action("Entrar", "LoginP")" class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <img src="@Url.Content("~/Images/logo_psiq.png")" />
                            <p style = "font-family: Courier, monospace; font-size:20px">A rede social para o lado mais expressivo do ser</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <h1 style="font-family:Stencil Std, fantasy">PSIQ</h1>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="control-label", style = "font-family: Courier, monospace; font-size:20px">E-mail:</label>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <label class="control-label", style = "font-family: Courier, monospace; font-size:20px">Senha:</label>
                                    @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <br />
                                    <label style = "font-family:Courier, monospace; font-size:20px"><input type="checkbox" name="optradio">Lembrar a senha?</label>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <br />
                                        <a href="@Url.Action("Index", "Home")" , style="font-family:Courier, monospace; font-size:20px">Página inicial   </a>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12 text-center">
                                    <br />
                                    <a href="@Url.Action("Index", "RecuperarSenha")", style = "font-family: Courier, monospace; font-size:20px">Esqueceu sua senha?</a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <br />
                                    <button type="submit" class="btn btn-primary btn-block", style = "font-family: Courier, monospace; font-size:20px">Entrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

